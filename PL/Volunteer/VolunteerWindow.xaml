<Window x:Class="PL.Volunteer.VolunteerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CurrentVolunteer Information" Height="600" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Grid>
        <!--   Buttons -->
        <Button Content="Histoy Calls" Click="btnCallsHistory_Click" HorizontalAlignment="Left" Margin="270,164,0,0" VerticalAlignment="Top"/>
        <Border BorderBrush="Black" BorderThickness="1"/>
        <Button Content="Close Call" IsEnabled="{Binding CurrentVolunteer.CallIn, Converter={StaticResource BoolConvertIsCallInProssesKey}, ConverterParameter=False}"  HorizontalAlignment="Left" Margin="290,204,0,0" VerticalAlignment="Top" Click="btnClosed_Call"/>
        <Button Content="Choose Call"   IsEnabled="{Binding CurrentVolunteer.CallIn, Converter={StaticResource BoolConvertIsCallInProssesKey}, ConverterParameter=True}" HorizontalAlignment="Left" Margin="310,245,0,0" VerticalAlignment="Top" Click="btnChooseCall_Click"/>
        <!-- Name -->
        <StackPanel Orientation="Horizontal" Margin="10,10,0,0" VerticalAlignment="Top">
            <Label Content="Name:" FontSize="14" VerticalAlignment="Center"/>
            <TextBox Text="{Binding CurrentVolunteer.FullName}" FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Phone -->
        <StackPanel Orientation="Horizontal" Margin="10,40,0,0" VerticalAlignment="Top">
            <Label Content="Phone:" FontSize="14" VerticalAlignment="Center"/>
            <TextBox Text="{Binding CurrentVolunteer.PhoneNumber}"  IsReadOnly="True" FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Email -->
        <StackPanel Orientation="Horizontal" Margin="10,70,0,0" VerticalAlignment="Top">
            <Label Content="Email:" FontSize="14" VerticalAlignment="Center"/>
            <TextBox Text="{Binding CurrentVolunteer.Email}" FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Address -->
        <StackPanel Orientation="Horizontal" Margin="10,100,0,0" VerticalAlignment="Top">
            <Label Content="Current Address:" FontSize="14" VerticalAlignment="Center"/>
            <TextBox Text="{Binding CurrentVolunteer.FullAddress}" FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Role -->
        <StackPanel Orientation="Horizontal" Margin="10,130,0,0" VerticalAlignment="Top">
            <Label Content="Role:" FontSize="14" VerticalAlignment="Center"/>
            <TextBox Text="{Binding CurrentVolunteer.Job}"  IsReadOnly="True" FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Active Status -->
        <StackPanel Orientation="Horizontal" Margin="10,160,0,0" VerticalAlignment="Top">
            <Label Content="Active Status:" FontSize="14" VerticalAlignment="Center"/>
            <TextBox Text="{Binding CurrentVolunteer.Active}" FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Distance -->
        <StackPanel Orientation="Horizontal" Margin="10,190,0,0" VerticalAlignment="Top">
            <Label Content="Distance:" FontSize="14" VerticalAlignment="Center"/>
            <TextBox Text="{Binding CurrentVolunteer.MaxReading}" FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Distance Type -->
        <StackPanel Orientation="Horizontal" Margin="10,220,0,0" VerticalAlignment="Top">
            <Label Content="Distance Type:" FontSize="14" VerticalAlignment="Center"/>
            <TextBox Text="{Binding CurrentVolunteer.TypeDistance}" FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Total Handled Calls -->
        <StackPanel Orientation="Horizontal" Margin="400,10,0,0" VerticalAlignment="Top">
            <Label Content="Total Handled Calls:" FontSize="14" VerticalAlignment="Center"/>
            <TextBox Text="{Binding CurrentVolunteer.SumCalls}" FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Total Cancelled Calls -->
        <StackPanel Orientation="Horizontal" Margin="400,40,0,0" VerticalAlignment="Top">
            <Label Content="Total Cancelled Calls:" FontSize="14" VerticalAlignment="Center"/>
            <TextBox Text="{Binding CurrentVolunteer.SumCanceled}" IsReadOnly="True" FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Total Expired Calls -->
        <StackPanel Orientation="Horizontal" Margin="400,70,0,0" VerticalAlignment="Top">
            <Label Content="Total Expired Calls:" FontSize="14" VerticalAlignment="Center"/>
            <TextBox Text="{Binding CurrentVolunteer.SumExpired}" IsReadOnly="True" FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Current Call -->
        <StackPanel Orientation="Vertical" Visibility="{Binding CurrentVolunteer.CallIn, Converter={StaticResource ConvertIsCallInProssesKey}}"  Margin="400,100,0,0" VerticalAlignment="Top">
           
            <TextBox Text="Current Call:"   FontSize="16" FontWeight="Bold" Margin="0,0,0,10" />

            <StackPanel Orientation="Horizontal">
                <Label Content="Call ID:" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" />
                <TextBox Text="{Binding CurrentVolunteer.CallIn.IdCall}" FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Description:" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" />
                <TextBox Text="{Binding CurrentVolunteer.CallIn.Description}" FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center" />
            </StackPanel>


            <StackPanel Orientation="Horizontal">
                <Label Content="Call Type:" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" />
                <TextBox Text="{Binding CurrentVolunteer.CallIn.Type}" FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content=" Call Address:" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" />
                <TextBox Text="{Binding CurrentVolunteer.CallIn.FullCallAddress}" FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Open Time:" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" />
                <TextBox Text="{Binding CurrentVolunteer.CallIn.TimeOpen, StringFormat=G}" FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Max Completion Time:" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" />
                <TextBox Text="{Binding CurrentVolunteer.CallIn.MaxTimeToClose, StringFormat=G}" FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Enter Time:" FontSize="14" FontWeight="Bold" />
                <TextBox Text="{Binding CurrentVolunteer.CallIn.StartTreat, StringFormat=G}" FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Distance from CurrentVolunteer:" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" />
                <TextBox Text="{Binding CurrentVolunteer.CallIn.distanceCallVolunteer}" FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Status:" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" />
                <TextBox Text="{Binding CurrentVolunteer.CallIn.Status}" FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center" />
            </StackPanel>
        </StackPanel>
      




    </Grid>
</Window>
