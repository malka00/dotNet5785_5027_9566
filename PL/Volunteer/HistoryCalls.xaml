<Window x:Class="PL.Volunteer.HistoryCalls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Volunteer"
        mc:Ignorable="d"
          DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Title="History Calls" Height="640" Width="800">

    <Grid>
        <!-- הגדרת שורות לגריד -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- השורה הראשונה עבור תיבת הבחירה -->
            <RowDefinition Height="*"/>
            <!-- השורה השנייה עבור ה-DataGrid -->
        </Grid.RowDefinitions>

        <!-- שורה ראשונה: בחירת סוג הקריאה -->
        <Grid Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Select Call Type:" 
                   Grid.Column="0" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Margin="3,0,0,0"/>

            <ComboBox  ItemsSource="{Binding Source={StaticResource ClosedCallColectionKey}}"  
                      SelectionChanged="cbVSelector_SelectionChanged" 
                      SelectedValue="{Binding ClosedCallInList, Mode=TwoWay}" 
                      Grid.Column="1" Margin="98,0,144,0"/>
            <ComboBox Margin="135,0,30,0"
   ItemsSource= "{Binding Source={StaticResource CallTypeCollectionKey}}"
   SelectionChanged="Call_Filter" 
   SelectedValue="{Binding TypeCallInList, Mode=TwoWay}" />
            <Label Content="select sort  value :" 
                Grid.Column="1" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Center" Width="135"/>
        </Grid>

        <!-- שורה שנייה: DataGrid להצגת הנתונים -->
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding ClosedCallList}" 
                  AutoGenerateColumns="False">


            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Header="Id" Width="*"/>
                <DataGridTextColumn Binding="{Binding Type}" Header="Type" Width="*"/>
                <DataGridTextColumn Binding="{Binding FullAddress}" Header="Full Address" Width="*"/>
                <DataGridTextColumn Binding="{Binding TimeOpen}" Header="Time Open" Width="*"/>
                <DataGridTextColumn Binding="{Binding StartTreat}" Header="Start Treatment" Width="*"/>
                <DataGridTextColumn Binding="{Binding TimeClose}" Header="Time Close" Width="*"/>

                <DataGridTemplateColumn Header="Call Type">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding TypeEndTreat}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>


        </DataGrid>


        <Button HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="28,0,0,28" 
                Click="btnBack_Click" Height="23" Width="28" Grid.Row="1">
            <Path Data="M10,0 L0,10 L10,20 L10,14 L20,14 L20,6 L10,6 Z" 
                  Fill="Black" Width="17" Height="20" VerticalAlignment="Center" Stretch="Fill"/>
        </Button>

        <Image Source ="C:\Users\efrat\Documents\מיני פרויקט\logo.png" HorizontalAlignment="Left" Height="53" Margin="674,0,0,0" VerticalAlignment="Top" Width="100"/>

    </Grid>

</Window>
