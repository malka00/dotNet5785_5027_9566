<Window x:Class="PL.Volunteer.ChooseCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Volunteer"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Title="ChooseCallWindow" Height="450" Width="800">
  

    <!--External Grid-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="500*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Internal, Upper Grid-->

        <Grid HorizontalAlignment="Stretch" Height="auto" Grid.Row="0" VerticalAlignment="Stretch" Width="auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ComboBox ItemsSource="{Binding Source={StaticResource OpenCallInListCollectionKey}}"  SelectionChanged="CallSelector_SelectionChanged" 
                      SelectedValue="{Binding OpenCallInList, Mode=TwoWay}" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>


            <!--ComboBox ראשון-->
            <ComboBox  Margin="167,0,0,0"
                  ItemsSource="{Binding StatusOrTypeOptions}" 
            SelectedItem="{Binding SelectedStatusOrType, Mode=TwoWay}"/>

            <!--ComboBox שני-->
            <ComboBox Margin="0,0,224,0"
               ItemsSource="{Binding SelectedStatusOrType, Converter={StaticResource ConvertStatusOrTypeToEnumKey}}"
            SelectedItem="{Binding SelectedSecondOption, Mode=TwoWay}" />



        </Grid>

        <DataGrid Grid.Row="1" ItemsSource="{Binding OpenCallList}" AutoGenerateColumns="False"  SelectedItem="{Binding SelectedCall}" SelectionChanged="DataGrid_SelectionChanged" >
            <!--הגדרת סגנון לכותרות-->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="AliceBlue"/>
                    <Setter Property="Foreground" Value="#0D1821"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Padding" Value="5"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>

                <DataGridTextColumn Binding="{Binding Id}" Header="Id" Width="*"/>

                <DataGridTemplateColumn Header="Call Type">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding CType}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CType}" Value="Puncture">
                                                <Setter Property="Foreground" Value="Red" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CType}" Value="Cables">
                                                <Setter Property="Foreground" Value="Blue" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CType}" Value="LockedCar">
                                                <Setter Property="Foreground" Value="Green" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Binding="{Binding Description}" Header="Description" Width="*"/>
                <DataGridTextColumn Binding="{Binding FullAddress}" Header=" Call Address" Width="*"/>
                <DataGridTextColumn Binding="{Binding TimeOpen}" Header="Time Opened" Width="*"/>
                <DataGridTextColumn Binding="{Binding MaxTimeToClose}" Header="Max Time To Close" Width="*"/>
                <DataGridTextColumn Binding="{Binding distanceCallVolunteer}" Header="distance Call Volunteer" Width="*"/>
              

               
            

                <DataGridTemplateColumn Header="Actions">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Choose" Click="BtnChoose_Click" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

        </DataGrid>
    </Grid>
</Window>

    