<Window x:Class="PL.Volunteer.ChooseCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Volunteer"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Title="ChooseCallWindow" Height="450" Width="800">


    <!--External Grid-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="500*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Internal, Upper Grid-->

        <Grid HorizontalAlignment="Stretch" Height="auto" Grid.Row="0" VerticalAlignment="Stretch" Width="auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="59*"/>
                <ColumnDefinition Width="341*"/>
                <ColumnDefinition Width="400*"/>
            </Grid.ColumnDefinitions>
            <!--Sort comobox-->
            <ComboBox ItemsSource="{Binding Source={StaticResource OpenCallInListCollectionKey}}"  SelectionChanged="CallSelector_SelectionChanged" 
                      SelectedValue="{Binding OpenCallInList, Mode=TwoWay}" Grid.Column="2" Margin="200,0,0,0"/>


            <!--ComboBox filter-->
            <ComboBox Margin="70,2,95,-2"
             ItemsSource= "{Binding Source={StaticResource CallTypeCollectionKey}}"
             SelectionChanged="Call_Filter" 
             SelectedValue="{Binding TypeCallInList, Mode=TwoWay}" Grid.Column="1" />
            <Label Content="Select Call Type:" 
                Grid.Column="0" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Center" 
                Margin="19,0,0,0" Grid.ColumnSpan="2"/>

        </Grid>

        <DataGrid ItemsSource="{Binding OpenCallList}" AutoGenerateColumns="False"  SelectedItem="{Binding SelectedCall}" SelectionChanged="DataGrid_SelectionChanged" Margin="0,46,0,44" Grid.Row="1" >
            <!--הגדרת סגנון לכותרות-->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="AliceBlue"/>
                    <Setter Property="Foreground" Value="#0D1821"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Padding" Value="5"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>

                <DataGridTextColumn Binding="{Binding Id}" Header="Id" Width="*"/>

                <DataGridTemplateColumn Header="Call Type">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding CType}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CType}" Value="Puncture">
                                                <Setter Property="Foreground" Value="Red" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CType}" Value="Cables">
                                                <Setter Property="Foreground" Value="Blue" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CType}" Value="LockedCar">
                                                <Setter Property="Foreground" Value="Green" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Binding="{Binding FullAddress}" Header=" Call Address" Width="*"/>
                <DataGridTextColumn Binding="{Binding TimeOpen}" Header="Time Opened" Width="*"/>
                <DataGridTextColumn Binding="{Binding MaxTimeToClose}" Header="Max Time To Close" Width="*"/>
                <DataGridTextColumn Binding="{Binding distanceCallVolunteer}" Header="distance Call Volunteer" Width="*"/>
                <DataGridTextColumn Binding="{Binding Status}" Header="Status" Width="*"/>




                <DataGridTemplateColumn Header="Actions">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Choose" Click="BtnChoose_Click" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

        </DataGrid>
        <Label Content="Select sort value:" 
            Grid.Column="0" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="478,1,0,0"/>
        <Border BorderBrush="Black" BorderThickness="1" Margin="-39,10,39,50" Grid.RowSpan="2"/>


        <Button  HorizontalAlignment="Left" Margin="10,369,0,0" VerticalAlignment="Top" Click="btnBack_Click" Height="23" Width="28" RenderTransformOrigin="0.107,3.219" Grid.Row="1">
            <Path Data="M10,0 L0,10 L10,20 L10,14 L20,14 L20,6 L10,6 Z" 
Fill="Black" 
Width="17" 
Height="20" 
VerticalAlignment="Center" Stretch="Fill" RenderTransformOrigin="0.182,0.812"/>
        </Button>







    </Grid>
</Window>

    