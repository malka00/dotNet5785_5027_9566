<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Volunteer Management System" Height="640" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Closed="Window_Closed"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="1" BlurRadius="4" Opacity="0.3"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Time Control Button Style -->
        <Style x:Key="TimeControlButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Width" Value="147"/>
            <Setter Property="Height" Value="32"/>
        </Style>

        <!-- Stats Label Style -->
        <Style x:Key="StatsLabel" TargetType="Label">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Background="#F5F5F5" Padding="20,10">
            <Grid>
                <Image Source="C:\Users\efrat\Documents\מיני פרויקט\PL\logo.png"  HorizontalAlignment="Right" Height="60" Width="120"/>
                <TextBlock Text="{Binding CurrentTime}" 
                         FontSize="24" 
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left Section: Main Controls -->
            <StackPanel>
                <!-- Main Action Buttons -->
                <UniformGrid Columns="2" Margin="0,0,0,10">
                    <Button Content="Handle Calls" 
                            Style="{StaticResource ModernButton}"
                            Margin="5"
                            Height="50"
                            Click="ButtonCall_Click"/>
                    <Button Content="Handle Volunteers" 
                            Style="{StaticResource ModernButton}"
                            Margin="5"
                            Height="50"
                            Click="ButtonVolunteer_Click"/>
                </UniformGrid>

                <UniformGrid Columns="2" Margin="0,0,0,10">
                    <Button Content="Init DB" 
                            Style="{StaticResource ModernButton}"
                            Background="#FF9800"
                            Margin="5"
                            Height="50"
                            Click="btnInitDB_Click"/>
                    <Button Content="Reset DB" 
                            Style="{StaticResource ModernButton}"
                            Background="#F44336"
                            Margin="5"
                            Height="50"
                            Click="btnResetDB_Click"/>
                </UniformGrid>

                <!-- Stats Grid -->
                <Border Background="White" 
                        BorderBrush="#DDDDDD" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Padding="15"
                        Margin="0,30">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Headers -->
                        <TextBlock Text="Status" 
                                 FontWeight="Bold" 
                                 Grid.Column="0"
                                 Margin="0,0,0,10"/>
                        <TextBlock Text="Count" 
                                 FontWeight="Bold" 
                                 Grid.Column="1"
                                 Margin="0,0,0,10"/>

                        <!-- Stats Rows -->
                        <TextBlock Text="Open" Grid.Row="1"/>
                        <TextBlock Text="{Binding CountCall[0]}" Grid.Row="1" Grid.Column="1"/>

                        <TextBlock Text="Treat" Grid.Row="2"/>
                        <TextBlock Text="{Binding CountCall[1]}" Grid.Row="2" Grid.Column="1"/>

                        <TextBlock Text="Close" Grid.Row="3"/>
                        <TextBlock Text="{Binding CountCall[2]}" Grid.Row="3" Grid.Column="1"/>

                        <TextBlock Text="Expired" Grid.Row="4"/>
                        <TextBlock Text="{Binding CountCall[3]}" Grid.Row="4" Grid.Column="1"/>

                        <TextBlock Text="Risk Open" Grid.Row="5"/>
                        <TextBlock Text="{Binding CountCall[4]}" Grid.Row="5" Grid.Column="1"/>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Right Section: Time Controls -->
            <StackPanel Grid.Column="1" Margin="20,0,0,0">
                <!-- Time Control Buttons -->
                <Button Content="Add One Minute" 
                        Style="{StaticResource TimeControlButton}"
                        Click="btnAddOneMinute_Click"/>
                <Button Content="Add One Hour" 
                        Style="{StaticResource TimeControlButton}"
                        Click="btnAddOneHour_Click"/>
                <Button Content="Add One Day" 
                        Style="{StaticResource TimeControlButton}"
                        Click="btnAddOneDay_Click"/>
                <Button Content="Add One Month" 
                        Style="{StaticResource TimeControlButton}"
                        Click="btnAddOneMonth_Click"/>
                <Button Content="Add One Year" 
                        Style="{StaticResource TimeControlButton}"
                        Click="btnAddOneYear_Click"/>

                <!-- Risk Time Configuration -->
                <Border Background="White" 
                        BorderBrush="#DDDDDD" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Padding="15"
                        Margin="0,20">
                    <StackPanel>
                        <Label Content="Enter Risk Time for Call"
                               FontWeight="Bold"/>
                        <TextBox Text="{Binding MaxRange, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Padding="5"
                                Margin="0,5"
                                TextChanged="TextBox_TextChanged"/>
                        <Button Content="Update"
                                Style="{StaticResource ModernButton}"
                                Click="btnUpdateMaxRange_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Back Button -->
        <Button Grid.Row="1"
                HorizontalAlignment="Left" 
                VerticalAlignment="Bottom"
                Margin="20"
                Style="{StaticResource ModernButton}"
                Background="#757575"
                Click="btnBack_Click">
            <Path Data="M10,0 L0,10 L10,20 L10,14 L20,14 L20,6 L10,6 Z" 
                  Fill="White" 
                  Width="17" 
                  Height="20" 
                  Stretch="Fill"/>
        </Button>
    </Grid>
</Window>