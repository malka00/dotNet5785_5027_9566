<Window x:Class="PL.EnterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Welcome" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Background="#F7F7F7">
    <Grid>
        <!-- כותרת -->
        <TextBlock Text="Login" HorizontalAlignment="Center" VerticalAlignment="Top" 
                   FontSize="36" FontFamily="Segoe UI" Foreground="#333333" Margin="0,30,0,0"/>

        <!--  ID -->
        <Label Content="Enter ID:" HorizontalAlignment="Left" Margin="200,100,0,0" 
               VerticalAlignment="Top" FontSize="16" Foreground="#555555"/>
        <TextBox Text="{Binding Path=Id, Mode=OneWayToSource}" HorizontalAlignment="Left" 
                 Margin="200,130,0,0" VerticalAlignment="Top" Width="400" Height="30" 
                 FontSize="14" FontFamily="Segoe UI" Background="#FFFFFF" Foreground="#333333" 
                 BorderBrush="#CCCCCC" BorderThickness="1" Padding="5"/>

        <!-- Password--><!--
     
        <TextBox Text="{Binding Path=Password, Mode=TwoWay}" HorizontalAlignment="Center" 
            Margin="0,228,0,0" VerticalAlignment="Top" Width="400" Height="30" 
            FontSize="14" FontFamily="Segoe UI" Background="#FFFFFF" Foreground="#333333" 
            BorderBrush="#CCCCCC" BorderThickness="1" Padding="5"/>-->

        <Label Content="Enter Password:" HorizontalAlignment="Left" Margin="200,180,0,0" 
          VerticalAlignment="Top" FontSize="16" Foreground="#555555"/>

        <!-- PasswordBox -->
        <PasswordBox PasswordChanged="PasswordBox_PasswordChanged"
               GotFocus="PasswordBox_GotFocus" 
               LostFocus="PasswordBox_LostFocus" 
               Margin="0,228,0,0" VerticalAlignment="Top" Width="400" Height="30" 
  FontSize="14" FontFamily="Segoe UI" Background="#FFFFFF" Foreground="#333333" 
  BorderBrush="#CCCCCC" BorderThickness="1" Padding="5" />

        <!-- כפתור כניסה -->
        <Button Content="Enter" Click="btnEnter_Click" HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" Margin="0,0,0,50" Width="150" Height="50" 
                FontSize="18" FontFamily="Segoe UI" Foreground="#FFFFFF" Background="#4CAF50" 
                BorderBrush="#388E3C" BorderThickness="1" Cursor="Hand">
            <Button.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="4" Color="#888888"/>
            </Button.Effect>
        </Button>
    </Grid>
</Window>